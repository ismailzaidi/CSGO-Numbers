<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="bold_font" parent="android:Widget.Material.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/headercolors</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="bold_font_other" parent="android:Widget.Material.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/headercolors</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="cardviewstyling">
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.Design.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TabLayoutDesign" parent="Base.Widget.Design.TabLayout"></style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/primarycolour</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabPaddingStart">3dp</item>
        <item name="tabPaddingEnd">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/primarycolour</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/primarycolour</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>