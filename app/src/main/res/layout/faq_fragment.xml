<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primarycolour"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultcolor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="FAQ"
                android:textColor="@color/whitetext"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Question: Why are stats on certain maps such as Mirage, Cache not available ?"
                android:gravity="left"
                android:textColor="@color/whitetext"
                android:padding="20dp"
                android:background="@drawable/table_highlight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="20dp"
                android:text="Answer: Valve does not produce such information in their Steam Web API"
                android:gravity="left"
                android:textColor="@color/whitetext" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Question: Why can't I see my rank and my competitive stats ?"
                android:gravity="left"
                android:textColor="@color/whitetext"
                android:padding="20dp"
                android:background="@drawable/table_highlight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="20dp"
                android:text="Answer: Sadly, Valve does not produce such information in their Steam Web API as its deemed private"
                android:gravity="left"
                android:textColor="@color/whitetext" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Question: Why can't I see certain weapon stats such as M4A1-S?"
                android:gravity="left"
                android:textColor="@color/whitetext"
                android:padding="20dp"
                android:background="@drawable/table_highlight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="20dp"
                android:text="Answer: Such information is provided but merged with the M4A4. Same concept applies with the CZ/5-Seven/Tec9"
                android:gravity="left"
                android:textColor="@color/whitetext" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>