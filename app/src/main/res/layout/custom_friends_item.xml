<?xml version="1.0" encoding="utf-8"?>
<com.csgo.iz.views.customviews.FriendListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        context:cardCornerRadius="1dp"
        context:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/friend_avatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/desc_list_item_icon"
                android:padding="5dp"
                android:src="@drawable/ic_launcher"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/friend_avatar"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JavaFreak"
                    android:textColor="@color/primarycolour"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/friend_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primarycolour"
                    android:textSize="10sp"
                    tools:text="Last Login: 2 Days Ago"/>

                <TextView
                    android:id="@+id/friend_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/losingcolor"
                    android:textSize="10sp"
                    tools:text="Private Profile"/>

                <TextView
                    android:id="@+id/game_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/losingcolor"
                    android:textSize="10sp"
                    tools:text="Game Status"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</com.csgo.iz.views.customviews.FriendListItemView>