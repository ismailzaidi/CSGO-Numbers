<?xml version="1.0" encoding="utf-8"?>
<com.csgo.iz.views.customviews.AchievementView xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:context="http://schemas.android.com/apk/res-auto"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        context:cardCornerRadius="1dp"
        context:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/achievementImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:src="@drawable/sample"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/achievementName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primarycolour"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Someone Set Us Up The Bomb"/>

                    <TextView
                        android:id="@+id/achievementDescription"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:textColor="@color/primarycolour"
                        android:textSize="12sp"
                        tools:text="Win a round by planting a bomb"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/achievementLock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/lock_0"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</com.csgo.iz.views.customviews.AchievementView>