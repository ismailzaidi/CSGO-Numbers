<?xml version="1.0" encoding="utf-8"?>
<com.csgo.iz.views.customviews.CustomGeneralStatView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    context:cardBackgroundColor="@color/primarycolour"
    context:cardCornerRadius="1dp"
    context:contentPadding="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-light"
            android:text="Summary"
            android:textColor="@color/whitetext"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/kda_layout"
            style="@style/cardviewstyling"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:background="@drawable/kda_circle"
            android:orientation="vertical">

            <TextView
                style="@style/bold_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="KDA"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/totalKda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.9"
                android:textColor="@color/whitetext"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/kda_layout"
            android:layout_toRightOf="@+id/kda_layout"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView3"
                        style="@style/bold_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/mvplayout"
                        android:layout_toRightOf="@+id/mvplayout"
                        android:drawableLeft="@drawable/kills_icon"
                        android:gravity="center"
                        android:text="Kills"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/totalKills"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/table_highlight"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0.9"
                        android:textColor="@color/whitetext" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        style="@style/bold_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/headshot_icon"
                        android:gravity="center"
                        android:text="Headshot"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/totalHeadShot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/table_highlight"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0.9"
                        android:textColor="@color/whitetext" />


                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/bold_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:drawableLeft="@drawable/accuracy_icon"
                        android:gravity="center"
                        android:text="Accuracy"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/accuracy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/table_highlight"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0.9"
                        android:textColor="@color/whitetext" />

                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kda_layout"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/bold_font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/time_icon"
                        android:gravity="center"
                        android:text="Time"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/bold_font"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/mvp_icon"
                        android:gravity="center"
                        android:text="MVP"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/bold_font"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/wins_icon"
                        android:gravity="center"
                        android:text="Win rate"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/totalTimePlayed"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/table_highlight"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0.9"
                        android:textColor="@color/whitetext" />

                    <TextView
                        android:id="@+id/totalMVP"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/table_highlight"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0.9"
                        android:textColor="@color/whitetext" />

                    <TextView
                        android:id="@+id/totalWin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/table_highlight"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0.9"
                        android:textColor="@color/whitetext" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </RelativeLayout>
</com.csgo.iz.views.customviews.CustomGeneralStatView>